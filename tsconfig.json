{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "jest.config.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
