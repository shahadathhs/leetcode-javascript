{
  "name": "leetcode-javascript",
  "version": "0.0.1",
  "description": "JavaScript-only LeetCode questions with solutions, explanations, and concept-based tagging.",
  "main": "dist/index.js",
  "author": "https://github.com/shahadathhs",
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist node_modules pnpm-lock.yaml && pnpm install",
    "dev": "ts-node --transpile-only -r tsconfig-paths/register src/main.ts",
    "dev:cli": "ts-node --transpile-only -r tsconfig-paths/register src/scripts/solution-cli.ts",
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node dist/main.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "format:fix": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:problem": "ts-node src/scripts/test-problem.ts",
    "test:cli": "ts-node --transpile-only -r tsconfig-paths/register src/scripts/test-cli.ts",
    "ci:check": "pnpm lint && pnpm format && pnpm build && pnpm test && pnpm start",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shahadathhs/leetcode-javascript.git"
  },
  "keywords": [
    "javascript",
    "leetcode",
    "algorithms",
    "data-structures",
    "interview-prep",
    "problem-solving"
  ],
  "bugs": {
    "url": "https://github.com/shahadathhs/leetcode-javascript/issues"
  },
  "homepage": "https://github.com/shahadathhs/leetcode-javascript#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "chalk": "4",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.ts": [
      "pnpm test"
    ]
  },
  "dependencies": {
    "inquirer": "^12.8.2"
  }
}
